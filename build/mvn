BUILD_DIR=$(dirname $0)
MVN_RUNNER=$BUILD_DIR/run-mvn
curl -s https://raw.githubusercontent.com/apache/spark/master/build/mvn > $MVN_RUNNER
chmod +x $MVN_RUNNER
source $MVN_RUNNER
